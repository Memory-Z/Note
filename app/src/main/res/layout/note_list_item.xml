<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/txt_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="记事本标题"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/llayout_time"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="right|center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_list_item_date"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2017.12.31 23:59"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_list_item_content"
            android:layout_above="@id/llayout_time"
            android:layout_below="@id/txt_list_item_title"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_list_item_content"
                android:minLines="1"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="内容"/>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>